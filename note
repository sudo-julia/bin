#!/usr/bin/env bash
# create or edit a note file

set -e
# TODO default to creating year and month dirs, use current day as default note name
if [[ "$EDITOR" ]]; then
	editor="$EDITOR"
else
	editor=nano
fi
ft="md"
note_name="$(date -I)"
note_dir="${HOME}/documents/personal/notes"

current_year="$(date +"%Y")"
current_month="$(date +"%m")"

year_dir="${note_dir}/${current_year}"
month_dir="${year_dir}/${current_month}"

create_dir() {
	# TODO operate on "$1", which is note-dir (defaults to month dir)
	if [[ ! -d "$1" ]]; then
		mkdir -p -- "$1"
	fi
}

create_note() {
	create_dir "$2"
	"$1" -- "${2}/${3}"
	exit 0
}

print_error() {
	tput setaf 1
	printf -- '[ERR] %s\n' "$*" >&2
	tput sgr0
	usage
	exit 1
}

usage() {
	cat <<EOF
Usage: note [<args>]

Arguments are:
    -e, --editor    Chose the editor to use (default \$EDITOR)
    -f, --filetype  Set the filetype of the new note (defaults to markdown)
    -h, --help      Display this help
    -n, --name      Set the name of the note
    --note-dir      Directory to store the note in
EOF
}

# handle arguments
TEMP=$(getopt -o 'e:f:hn:' -l 'filetype:,editor:,help,name:,note-dir:' -n 'note' -- "$@")
eval set -- "$TEMP"
unset TEMP

while true; do
	case "$1" in
	'-f' | '--filetype')
		ft="$2"
		shift 2
		continue
		;;
	'-e' | '--editor')
		editor="$2"
		shift 2
		continue
		;;
	'-h' | '--help')
		usage
		exit 0
		;;
	'-n' | '--name')
		note_name="$2"
		shift 2
		continue
		;;
	'--note-dir')
		note_dir="$2"
		shift 2
		continue
		;;
	'--')
		shift
		break
		;;
	*)
		print_error "$2 is not a recognized argument"
		exit 1
		;;
	esac
done

create_note "$editor" "$note_dir" "${note_name}.${ft}"
